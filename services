<script>
(function(){
document.addEventListener("click",function(e){
var el=e.target;
while(el&&el!==document){
if(el.getAttribute("data-dl-action")){
dataLayer.push({
event:"custom_click",
click:{
action:el.getAttribute("data-dl-action"),
text:(el.innerText||"").trim(),
url:""
},
page:{name:"services"},
timestamp:new Date().toISOString()
});
return;
}
el=el.parentNode;
}
});
})();
</script>

